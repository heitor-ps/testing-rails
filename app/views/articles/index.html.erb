<h1>Mostrando os artigos</h1>
<%= link_to 'Voltar à homepage', controller: 'welcome' %>
<br><br><br><br>

<%= link_to 'Novo Artigo', new_article_path %><br><br>
<table>
    <tr>
        <th>Título</th>
        <th>Texto</th>
        <th></th>
    </tr>

    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.text %></td>
            <td><%= link_to 'Mostrar artigo completo', article_path(article) %></td>
            <td><%= link_to 'Editar', edit_article_path(article)%></td>
            <td><%= link_to 'Destroy', article_path(article),method:
            :delete, data: { confirm: 'Are you sure?'}%></td>
        </tr>
    <% end %>
</table>

